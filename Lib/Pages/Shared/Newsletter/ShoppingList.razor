@page "/newsletter/shoppinglist"
@inject DisplayHelper DH
@using System.Net
@using Core.Models.Footnote
@using Core.Models.Newsletter
@using Core.Dtos.User
@using Lib.Pages.Shared.Recipe

@if (List?.Any() == true)
{
    <div style="background-color:lavender;padding:1rem;margin-block:1rem;">
        <h3 style="margin:0;">Shopping List</h3>
        <ul style="padding-inline-start:2ch;margin-block:0;display:grid;gap:1ex;">
            @foreach (var item in List.Where(l => !l.SkipShoppingList || Verbosity.HasFlag(Verbosity.CommonIngredients)).OrderBy(l => l.Name))
            {
                <li>@(item.Quantity == Fractions.Fraction.Zero ? "" : $"{item.Quantity} ")@(item.Measure.GetSingleDisplayName()) @item.Name</li>
            }
        </ul>
    </div>
}

@code {
    [Parameter]
    public Core.Dtos.User.UserNewsletterDto? User { get; set; }

    [Parameter, EditorRequired]
    public IList<RecipeIngredientDto>? List { get; set; }

    [Parameter, EditorRequired]
    public Verbosity Verbosity { get; set; }
}