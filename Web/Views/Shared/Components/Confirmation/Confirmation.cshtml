@model ConfirmationViewModel

<details class="alert alert-danger" role="alert">
    <summary><b>Your account is not confirmed. Look for a confirmation email in your inbox.</b></summary>

    <form asp-controller="@UserController.Name" asp-action="@nameof(UserController.ResendConfirmation)" method="post"
          asp-route-email="@Model.User.Email" asp-route-token="@Model.Token" class="mt-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="submit" value="Resend" class="btn btn-outline-secondary" />
    </form>
</details>
