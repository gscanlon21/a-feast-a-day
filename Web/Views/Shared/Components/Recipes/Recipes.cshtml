@model RecipesViewModel
@using Core.Models.Recipe
@using Core.Models.User
@using Lib.Pages.Shared.Recipe

@if (Model.Recipes != null && Model.Recipes.Any())
{
    <details class="mt-4 mb-25">
        <summary class="mb-1 h5">
            @Html.DisplayNameFor(_ => Model.Recipes)
            <span class="float-end">@Model.Recipes.Count()</span>
        </summary>

        <component type="typeof(RecipeSection)" render-mode="Static" param-User="Model.UserNewsletter" param-Recipes='Model.Recipes' param-Theme='RecipeTheme.None' param-Verbosity="Model.Verbosity" />
    </details>
}
