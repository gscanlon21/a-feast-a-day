@model RecipesViewModel
@using Core.Models.Exercise
@using Lib.ViewModels.User
@using Lib.ViewModels.Newsletter
@using Core.Models.User

@if (Model.Recipes != null && Model.Recipes.Any())
{
    <details class="mt-4 mb-25">
        <summary class="mb-1 h5">
            @Html.DisplayNameFor(_ => Model.Recipes)
            <span class="float-end">@Model.Recipes.Count()</span>
        </summary>

        @foreach (var group in Model.Recipes.GroupBy(v => v.Section).OrderBy(g => g.Key))
        {
            <details class="ms-3 mt-4 mb-25">
                <summary class="mb-1 h5">
                    @group.Key.GetSingleDisplayName()
                    <span class="float-end">@group.Count()</span>
                </summary>

                <component type="typeof(Lib.Pages.Shared.Exercise.ExerciseSection)" render-mode="Static" param-User="Model.UserNewsletter" param-Recipes='group' param-Theme='group.Key.AsTheme()' param-Verbosity="Model.Verbosity" />
            </details>
        }
    </details>
}
