<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Hybrid"
             xmlns:converter="clr-namespace:Hybrid.Converters"
             xmlns:pages="clr-namespace:Hybrid.Pages"
             xmlns:entities="clr-namespace:Hybrid.Database.Entities"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:newsletter="clr-namespace:Hybrid.Database.Entities;assembly=Hybrid"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="local:ShoppingListPageViewModel"
             x:Class="Hybrid.ShoppingListPage"
             x:Name="ShoppingList"
             Title="Shopping List">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference ShoppingList}}"
            Command="{Binding LoadCommand}" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrWhiteSpaceConverter x:Key="IsStringNotNullOrWhiteSpaceConverter" />
            <converter:MethodToValueConverter x:Key="MethodToValueConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*" RowDefinitions="50,*" RowSpacing="-5">
        <Entry Placeholder="Add Ingredient"
               BackgroundColor="Transparent"
               Text="{Binding IngredientEntry}" Margin="14,0"
               ReturnCommand="{Binding WhenCompletedCommand}"/>

        <RefreshView Grid.Row="1" IsRefreshing="{Binding Loading}" Command="{Binding LoadCommand}">
            <CollectionView x:Name="shoppingListView" ItemsSource="{Binding Ingredients}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="entities:ShoppingListItem">
                        <Grid ColumnDefinitions="55,*" RowDefinitions="*,1">

                            <CheckBox x:Name="Checkbox" IsChecked="{Binding IsChecked}" Color="{StaticResource Secondary}"></CheckBox>

                            <StackLayout Grid.Column="1" Margin="0,10" Padding="0,0,5,0">
                                <Label Text="{Binding Converter={StaticResource MethodToValueConverter}, ConverterParameter='Title'}"
                                       FontSize="16" FontAttributes="Bold" TextColor="{StaticResource Primary}" LineBreakMode="WordWrap"/>

                                <Label Text="{Binding Converter={StaticResource MethodToValueConverter}, ConverterParameter='Description'}" LineBreakMode="WordWrap"
                                       IsVisible="{Binding Source={RelativeSource Self}, Path=Text, Converter={StaticResource IsStringNotNullOrWhiteSpaceConverter}}"/>
                            </StackLayout>

                            <BoxView Grid.Row="1" Grid.Column="1" HeightRequest="1" Color="{StaticResource Secondary}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
